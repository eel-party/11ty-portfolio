        {{ collections.nav | eleventyNavigation | eleventyNavigationToHtml({
            listElement: "div", listItemElement: "div", listClass: "list", listItemClass: "fr pl2"
        }) | safe }}

    </div>
<article class="fw3">
    
    <h1 class="georgia fw1">{{ title }}</h1>
    <h2 class="fw3">{{ description }}</h2>
    {{ content | safe }}
    <!-- here: eval if this is home, if home show "shows" list -->
    
</article>
<footer>
    &copy; {{ metadata.title }} | this is some footer
    
</footer>
</body>
</html>


