---
layout: base.njk
---
<p>this uses the "group" template</p>
<p class="">
    {{ content | safe }}
</p>
<div class="center ph0-ns">
    <ul class="list pl0 cf ph0-ns">
        {% for item in collections.item %}
        {% if item.data.ID == ID %}
        <li class="fl w-100 w-25-ns pr3 pb3 mb3">

            <div class="bt bw3">
                <h3 class="pt3 pb3 ma0">
                <a href="{{ item.url | url}}" class="link dark-gray dib underline hover-bg-hot-pink">
                   {{ item.data.title }}
                </a>
                </h3>
                <a href="{{ item.url }}" class="link dim"><img src="/img/{{ item.data.image }}" alt="{{ title }}" class="img" /></a>
            </div>
        </li>
        {% endif %}
        {% endfor %}
    </ul>
</div>