---
layout: base.njk
---
<p>this uses the "item" template</p>
    <p class="">
        {{ content | safe }}
    </p>
    <!-- not working for show pages -->
    <a href="../../{{ ID | url }}">&larr; back to book index</a>
    <p>Tags:</p>
    <ul class="">
        {% for tag in collections.tagList %}
        <li class="">
            {% if tag == "group" %}
            {% elif tag == "item" %}
            {% elif tag == "featured" %}
            {% else %}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" class="">{{ tag }}</a>
            {% endif %}
        </li>
        {% endfor %}
    </ul>
