---
layout: base.njk
---
<!-- this needs
- title
- date
- thumbnail
- 33% at full size -->
<div>
    <p>this uses the "page" template</p>
    <p class="">
        {{ content | safe }}
    </p>
</div>
<div class="center ph0-ns">
    <ul class="list cb vh-100-ns ph0">
        {% for group in collections.group %}
        {% if group.data.eleventyNavigation.parent == eleventyNavigation.key %}
        <li class="fl w-100 w-33-ns pr0 pr3-ns pb5">
            <div class="bt bw3">
                <h3 class="ma0 pv3">
                    <a href="{{ group.url | url}}" class="link dark-gray dib underline hover-bg-hot-pink">
                        {{ group.data.title }}
                    </a>
                </h3>
                <p class="ma0 pb3 gray">{{ group.data.date | readableDate }}</p>
                <a href="{{ group.url }}" class="link dim">
                    <div class="vh-75 cover bg-center" style="background-image: url(/img/{{ group.data.image }});" alt="{{group.data.title}}"></div>
                </a>
            </div>
        </li>
        {% endif %}
        {% endfor %}
    </ul>
</div>