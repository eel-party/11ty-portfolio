
<div>
    {% for post in postslist | reverse %}
    <a href="{{ post.url | url }}" class="">
        {{ post.data.title }}
    </a>
    <a href="{{ post.url }}"><img src="/img/{{ post.data.image }}" alt="{{ description }}" class="" /></a>
    <ul class="">
        {% for tag in post.data.tags %}
        {% if tag == "group" %}
        {% elif tag == "item" %}
        {% elif tag == "featured" %}
        {% else %}
        <li class="">
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" class="">{{ tag }}</a>
        </li>
        {% endif %}
        {% endfor %}
    </ul>
    {% endfor %}
</div>